{
  "name": "echo-narcissus",
  "version": "0.1.0",
  "main": "src/client/main.ts",
  "repository": "git@github.com:melnyczuk/echo-narcissus.git",
  "author": "how melnyczuk <how@melnycz.uk>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,py}": [
      "pipenv run sort",
      "pipenv run format",
      "pipenv run lint",
      "pipenv run typecheck",
      "yarn lint:fix",
      "yarn prettier"
    ]
  },
  "dependencies": {
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@types/globalthis": "^1.0.1",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "concurrently": "^6.1.0",
    "electron": "12.0.4",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "yarn build && concurrently 'tsc -w' 'electron ./dist/main.js'",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --single-quote --trailing-comma es5 --write './src/**/*.ts'",
    "prebuild": "yarn clean",
    "postbuild": "cp -r src/client/public dist",
    "postinstall": "pipenv install",
    "start": "npm run build && electron ./dist/main.js",
    "typecheck": "tsc --noEmit"
  }
}
